<div class="row">
    <div class="col-md-12">
        <h1 class="text-info">Intrest</h1>
    </div>
    <form action="/admin/intrest" method="post">
    <div class="col-md-12">
        <input type="text" name="intrest" class="form-control" required>
    </div>
    <div class="col-md-12 text-center pt-3">
        <button class="btn btn-info">Save Intrest</button>
        <a href="/admin/interst_list" class="btn btn-info">Interest List</a>
    </div>
</form>
</div>
</div>
