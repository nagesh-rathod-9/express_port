<form action="/admin/home_data" method="post" enctype="multipart/form-data">
<h1 class="text-primary">Home Details</h1>
<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-6">
            Name
            <input type="text" class="form-control" name="name" value="<%=data.name%>">
        </div>
        <div class="col-md-6">
            Position
            <input type="text" class="form-control" name="position" value="<%=data.position%>">
        </div>
        <div class="col-md-6">
            Image 1 b&w
            <input type="file" class="form-control" name="image1" value="<%=data.image1%>">
        </div>
        <!-- <div class="col-md-6">
            Image 2
            <input type="file" class="form-control" name="image2" value="<%=data.image2%>">
        </div> -->
        <div class="col-md-12 mt-5">
             
        <textarea name="discription" id="" class="form-control" rows="5" placeholder="Discription" value="<%=data.discription%>"><%=data.discription%></textarea>
        </div>
        <div class="col-md-12 text-center pt-4">
            <button class="btn btn-info">Save</button>
        </div>
    </div>
</div>
</form>
<legend>
